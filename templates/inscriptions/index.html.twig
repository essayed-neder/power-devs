{% extends 'back.html.twig' %}

{% block title %}Inscriptions index{% endblock %}

{% block body %}
<div style = "position:relative; left:300px; top:100px;">


    <h1>Inscriptions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idinscri</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Tel</th>
                <th>Genre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inscription in inscriptions %}
            <tr>
                <td>{{ inscription.idinscri }}</td>
                <td>{{ inscription.nom }}</td>
                <td>{{ inscription.prenom }}</td>
                <td>{{ inscription.tel }}</td>
                <td>{{ inscription.genre }}</td>
                <td>
                    <a href="{{ path('app_inscriptions_show', {'idinscri': inscription.idinscri}) }}">show</a>
                    <a href="{{ path('app_inscriptions_edit', {'idinscri': inscription.idinscri}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div style = "position:relative; left:50px; top:50px;">
<p data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><a href="{{ path('app_inscriptions_new') }}" class="btn btn-primary px-4 py-3">Create</a></p></div>
{% endblock %}
